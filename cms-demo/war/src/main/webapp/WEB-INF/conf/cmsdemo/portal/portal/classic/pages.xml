<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page>
    <name>homepage</name>
    <title>Home Page</title>
	<access-permissions>Everyone</access-permissions>
	<edit-permission>*:/platform/administrators</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>web</application-ref>
        <portlet-ref>HomePagePortlet</portlet-ref>
        <preferences>
          <preference>
            <name>template</name>
            <value>system:/templates/home.gtmpl</value>
            <read-only>false</read-only>
          </preference>
        </preferences>
      </portlet>
      <title>Home Page portlet</title>
      <access-permissions>Everyone</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>
 
  <page>
    <name>cmsbanner</name>
    <title>CMS Banner</title>
    <access-permissions>Everyone</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>cms</application-ref>
        <portlet-ref>CMSBannerPortlet</portlet-ref>
      </portlet>
      <title>CMS Portlet</title>
      <access-permissions>Everyone</access-permissions>      
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>cms</name>
    <title>CMS</title>
    <access-permissions>Everyone</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>cms</application-ref>
        <portlet-ref>CMSPortlet</portlet-ref>
      </portlet>
      <title>CMS Portlet</title>
      <access-permissions>Everyone</access-permissions>      
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>
 
  <page>
    <name>tour</name>
    <title>KS Tour</title>
    <access-permissions>Everyone</access-permissions>
    <edit-permission>*:/platform/administrators</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>web</application-ref>
        <portlet-ref>HomePagePortlet</portlet-ref>
        <preferences>
          <preference>
            <name>template</name>
            <value>system:/templates/tour.gtmpl</value>
            <read-only>false</read-only>
          </preference>
        </preferences>
      </portlet>      
      <title>Tour</title>
      <access-permissions>Everyone</access-permissions>      
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>
</page-set>
